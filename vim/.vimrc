syntax on
set nocompatible
set backup
set backupext=.bak
set backupcopy=yes

set viminfo='20,\"100
set history=100

set showmatch
set ignorecase

set backspace=indent,eol,start"
set nowrap
set textwidth=0

set autoindent
set tabstop=4
set softtabstop=4
set expandtab

set listchars=trail:-,tab:\|\ ,eol:.,extends:»,precedes:«
set list

set showmode
set number
set colorcolumn=80
set cursorline

set background=dark
colorscheme habamax
